{
	"parser": "babel-eslint",
	"extends": ["airbnb-base/legacy", "prettier"],
	"plugins": ["prettier", "node"],
	"rules": {
		"comma-dangle": 0,
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true,
				"allowTernary": true,
				"allowTaggedTemplates": true
			}
		],
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"printWidth": 80,
				"jsxBracketSameLine": true,
				"number-leading-zero": null
			}
		]
	}
}
